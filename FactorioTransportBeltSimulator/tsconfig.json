{
  "compileOnSave": true,
  "compilerOptions":
  {
    "typeRoots":
    [
      //"./ts/def"
    ],

    "target": "ES6",
    "outFile": "./ts/bundle.js",

    //"target": "ES5",
    //"outFile": "./ts/bundle-es5.js",

    "jsx": "react",
    "module": "None",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": false,
    "noEmitOnError": true,
    //"watch": true
    "sourceMap": true
  },
  "exclude":
  [
    "node_modules"
  ]
}
